{
  "github": {
    "release": true
  },
  "npm": {
    "publish": false,
    "ignoreVersion": true
  },
  "plugins": {
    "@release-it/bumper": {
      "out": {
        "file": "VERSION",
        "type": "text/plain"
      }
    },
    "@release-it/keep-a-changelog": {
      "filename": "CHANGELOG.md"
    }
  }
}
